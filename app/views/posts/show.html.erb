<div class="container-sm mt-3 mb-3">
  
    <div class="border mt-2 w-75">
      <div class="d-flex justify-content-between">
        <h5><%= @post.title %># by <%= @user.name %></h5>
        <h6 class="me-3"> comments : <%= @post.comments_counter %>, likes : <%= @post.likes_counter %></h6>
      </div>
      
      <p><%= @post.text %><p>
    </div>
    <div class="border mt-0 w-75">
    <% @post.comments.includes(:user).each do |comment| %>
      <p> <%= comment.user.name %> : <%= comment.text %><p>
      <div id="hide_me">
      <% if can? :destroy, comment %>
      <%= form_with model: comment, url: user_post_comment_path(comment.post.author_id,comment.post.id, comment.id), method: :delete, local: false do |f| %>
        <%= f.hidden_field :post_id, value: "1" %>
        <%= f.submit "Delete comment", class: "btn btn-primary" %>
      <% end %>
      <% end %>
      </div>
    <% end %>
    </div>
<div id="hide_me">
<%= form_with model: @like, url: user_post_likes_path(@post.author_id,@post.id), method: :post, local: false do |f| %>
  <%= f.hidden_field :post_id, value: "1" %>
  <%= f.submit "Add like", class: "btn btn-primary" %>
<% end %>
</div>

</div>

