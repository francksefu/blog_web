<h1 class="mt-3 mb-2"> Create comment </h1>
<%= form_with model: comment, class: "w-50", local: true do |f| %>
<div class="input-group mb-3">
<%= f.label :post_id, class: "input-group-text" %>
<%= f.collection_select :post_id, @posts, :id, :title, {:prompt=>true}, {:class=>"form-select"}  %><br>
</div>
<div class="input-group mb-3">
<%= f.label :text, class: "input-group-text" %>
<%= f.text_area :text, class: "form-control" %><br>
</div>
<%= f.submit class: "btn btn-primary" %>
<% end %>